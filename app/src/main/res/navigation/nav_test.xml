<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_test"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.kreactive.technicaltest.ui.fragment.ListFragment"
        android:label="ListFragment" >
        <action
            android:id="@+id/action_listFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/fab_slide_in_from_right"
            app:exitAnim="@anim/fab_slide_out_to_left"
            app:popEnterAnim="@anim/fab_slide_in_from_left"
            app:popExitAnim="@anim/fab_slide_out_to_right" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.kreactive.technicaltest.ui.fragment.DetailFragment"
        android:label="DetailFragment" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.kreactive.technicaltest.ui.fragment.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_searchFragment_to_listFragment"
            app:destination="@id/listFragment"
            app:enterAnim="@anim/fab_slide_in_from_right"
            app:exitAnim="@anim/fab_slide_out_to_left"
            app:popEnterAnim="@anim/fab_slide_in_from_left"
            app:popExitAnim="@anim/fab_slide_out_to_right" />
    </fragment>
</navigation>